    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const panel1Icons = document.querySelectorAll('.panel1-icon');
            const panel2 = document.getElementById('panel2');
            const panel2Search = document.getElementById('panel2Search');
            const panel2Content = document.getElementById('panel2Content');
            const headingTitle = document.getElementById('headingTitle'); 
            const contentSection = document.getElementById('contentSection');
            const infoPanel = document.getElementById('infoPanel');
            const infoPanelContent = document.getElementById('infoPanelContent');

            const togglePanel2Btn = document.getElementById('togglePanel2Btn');
            const toggleInfoPanelBtn = document.getElementById('toggleInfoPanelBtn');
            const togglePanel2Icon = togglePanel2Btn.querySelector('i');
            const toggleInfoPanelIcon = toggleInfoPanelBtn.querySelector('i');

            const iconNotifications = document.getElementById('iconNotifications');
            const iconMessages = document.getElementById('iconMessages');
            const iconCart = document.getElementById('iconCart');

            let currentMainCategory = null;
            let currentSubCategory = null;

            // Data for 2nd Panel subsections with icons
            const panelData = {
                marketplace: {
                    name: "Marketplace",
                    searchPlaceholder: "Search Marketplace",
                    sections: {
                        "Browse": [
                            { name: "All Products", icon: "fas fa-th-large" },
                            { name: "By Category", icon: "fas fa-tags" },
                            { name: "By Seller", icon: "fas fa-store-alt" },
                            { name: "By Provenance", icon: "fas fa-map-marker-alt" }
                        ],
                        "My Buying": [
                            { name: "My Purchases", icon: "fas fa-receipt" },
                            { name: "Favourites", icon: "fas fa-heart" }
                        ],
                        "My Selling": [
                            { name: "Products", icon: "fas fa-boxes" },
                            { name: "My Orders", icon: "fas fa-dolly" },
                            { name: "Analytics", icon: "fas fa-chart-line" },
                            { name: "Finance", icon: "fas fa-file-invoice-dollar" }
                        ]
                    }
                },
                management: {
                    name: "Management",
                    searchPlaceholder: "Search Management",
                    sections: {
                        "Time": [
                            { name: "Calendar", icon: "fas fa-calendar-alt" },
                            { name: "Task List", icon: "fas fa-clipboard-list" }
                        ],
                        "Health": [
                            { name: "Medicines", icon: "fas fa-pills" },
                            { name: "Records", icon: "fas fa-notes-medical" }
                        ],
                        "Livestock": [
                            { name: "Animals", icon: "fas fa-paw" },
                            { name: "Breeding", icon: "fas fa-dna" },
                            { name: "Records", icon: "fas fa-book-medical" }
                        ],
                        "Grazing": [
                            { name: "Current", icon: "fas fa-mountain" },
                            { name: "Planning", icon: "fas fa-map-signs" },
                            { name: "Records", icon: "fas fa-clipboard" }
                        ],
                        "Finances": [
                            { name: "Cashflow", icon: "fas fa-hand-holding-usd" },
                            { name: "Planning", icon: "fas fa-piggy-bank" },
                            { name: "Accounting", icon: "fas fa-calculator" }
                        ]
                    }
                },
                community: {
                    name: "Community",
                    searchPlaceholder: "Search Community",
                    sections: {
                        "Groups": [
                            { name: "All Groups", icon: "fas fa-object-group" },
                            { name: "By Category", icon: "fas fa-folder-open" }
                        ],
                        "Courses": [
                            { name: "All Courses", icon: "fas fa-graduation-cap" },
                            { name: "By Category", icon: "fas fa-sitemap" }
                        ]
                    }
                },
                help: {
                    name: "Help",
                    searchPlaceholder: "Search Help",
                    sections: {
                        "Support Options": [
                            { name: "Knowledge Library", icon: "fas fa-book" },
                            { name: "Report a Problem", icon: "fas fa-exclamation-triangle" },
                            { name: "Talk to Our Team", icon: "fas fa-headset" }
                        ]
                    }
                },
                profile: {
                    name: "Profile",
                    searchPlaceholder: "Search Profile",
                    sections: {
                        "My Account": [
                            { name: "View Profile", icon: "fas fa-user-edit" },
                            { name: "Notifications", icon: "fas fa-bell" },
                            { name: "Messages", icon: "fas fa-envelope" },
                            { name: "Activity Log", icon: "fas fa-history" },
                            { name: "Details and Addresses", icon: "fas fa-address-card" },
                            { name: "Payments", icon: "fas fa-credit-card" },
                            { name: "Settings", icon: "fas fa-cog" },
                            { name: "Sign out", icon: "fas fa-sign-out-alt" }
                        ]
                    }
                }
            };

            // Detailed information for info panel
            const detailedInfo = {
                notifications: "<strong>About Notifications:</strong><br>Stay updated with important alerts from across the platform. Notifications cover new orders, task reminders, community updates, and system messages. You can filter them by source (Marketplace, Management, Community) and status (All, Unread, Favourites) to quickly find what matters most. Don't miss out on crucial information!",
                messages: "<strong>About Messages:</strong><br>Connect directly with other users, sellers, or support. Your messages are organized here, allowing you to filter by source and status. Use this section for inquiries, discussions, and managing communications related to your activities on the platform. Secure and direct communication is key.",
                shoppingCart: "<strong>About Your Shopping Cart:</strong><br>Review items you've added from the Marketplace. You can adjust quantities, remove items, or proceed to checkout. The cart saves your selections, making it easy to complete purchases at your convenience. Ensure your order details are correct before finalizing."
            };


            panel1Icons.forEach(icon => {
                icon.addEventListener('click', () => {
                    const category = icon.dataset.category;
                    currentMainCategory = category;

                    panel1Icons.forEach(i => i.classList.remove('active'));
                    icon.classList.add('active');

                    populatePanel2(category);
                    if (panel2.classList.contains('hidden')) { 
                        panel2.classList.remove('hidden');
                        panel2.style.borderRight = '1px solid var(--border-color)';
                        contentSection.style.borderLeft = 'none'; 
                        togglePanel2Icon.classList.remove('fa-chevron-right');
                        togglePanel2Icon.classList.add('fa-chevron-left');
                    }
                });
            });

            function populatePanel2(categoryKey) {
                const data = panelData[categoryKey];
                if (!data) {
                    panel2Content.innerHTML = '<p>No subsections available.</p>';
                    panel2Search.placeholder = 'Search...';
                    return;
                }
                panel2Search.placeholder = data.searchPlaceholder;
                let html = '';
                for (const groupName in data.sections) {
                    html += `<div class="panel2-subsection-group"><h4>${groupName}</h4>`;
                    html += '<ul class="panel2-subsection-list">';
                    data.sections[groupName].forEach(item => { // item is now an object {name: "...", icon: "..."}
                        html += `<li><a href="#" data-category="${categoryKey}" data-subsection="${item.name}">`;
                        if (item.icon) {
                            html += `<i class="${item.icon}"></i>`;
                        }
                        html += `${item.name}</a></li>`;
                    });
                    html += '</ul></div>';
                }
                panel2Content.innerHTML = html;

                panel2Content.querySelectorAll('a').forEach(link => {
                    link.addEventListener('click', (e) => {
                        e.preventDefault();
                        const subCategory = link.dataset.subsection; // This is item.name
                        const mainCat = link.dataset.category;
                        currentSubCategory = subCategory;

                        panel2Content.querySelectorAll('a').forEach(a => a.classList.remove('active'));
                        link.classList.add('active');
                        
                        if (mainCat === "profile" && subCategory === "Notifications") {
                            loadNotifications(true); 
                        } else if (mainCat === "profile" && subCategory === "Messages") {
                            loadMessages(true); 
                        } else {
                            updateContentPage(mainCat, subCategory); 
                        }
                    });
                });
            }

            function showInfoPanel() {
                if (infoPanel.classList.contains('hidden')) {
                    infoPanel.classList.remove('hidden');
                    infoPanel.style.borderLeft = '1px solid var(--border-color)';
                    toggleInfoPanelIcon.classList.remove('fa-chevron-left');
                    toggleInfoPanelIcon.classList.add('fa-chevron-right');
                }
            }

            function updateContentPage(mainCategory, subCategory) {
                headingTitle.textContent = subCategory; 
                contentSection.innerHTML = `<h2>${subCategory}</h2><p>Content for ${mainCategory} - ${subCategory} goes here.</p><p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.</p> `.repeat(3);
                infoPanelContent.innerHTML = `Detailed information related to <strong>${subCategory}</strong>. <br>Explore various features and manage your activities efficiently. This section provides context for the currently selected item.`; 
                showInfoPanel();
            }

            iconNotifications.addEventListener('click', () => loadNotifications(true));
            iconMessages.addEventListener('click', () => loadMessages(true));
            iconCart.addEventListener('click', () => {
                currentMainCategory = "Marketplace"; 
                currentSubCategory = "Shopping Cart";
                headingTitle.textContent = "Shopping Cart"; 
                contentSection.innerHTML = `<h2>Shopping Cart</h2><p>Your shopping cart is currently empty. Add some wonderful farm products!</p>`;
                infoPanelContent.innerHTML = detailedInfo.shoppingCart; 
                showInfoPanel(); 
                panel2Content.querySelectorAll('a').forEach(a => a.classList.remove('active'));
            });

            function loadNotifications(showDetailedInfo = false) {
                currentMainCategory = null; 
                currentSubCategory = "Notifications";
                headingTitle.textContent = "Notifications"; 
                contentSection.innerHTML = `
                    <h2>Notifications</h2>
                    <div class="filter-container">
                        <div class="filter-group">
                            <label for="notif-source">Source:</label>
                            <select id="notif-source"><option>All</option><option>Marketplace</option><option>Management</option><option>Community</option></select>
                            <label for="notif-status">Status:</label>
                            <select id="notif-status"><option>All</option><option>Unread</option><option>Favourites</option></select>
                            <input type="search" placeholder="Search notifications..."><button>Search</button>
                        </div>
                    </div>
                    <ul class="item-list">
                        <li>Notification 1: New order #12345 received (Marketplace) - <em>unread</em></li>
                        <li>Notification 2: Task 'Repair Fence Section B' overdue (Management)</li>
                        <li>Notification 3: User 'FarmFresh' commented on your post in 'Organic Growers Group' (Community) - <em>favourite</em></li>
                        <li>Notification 4: Welcome to the Food & Fibre Hub! Explore and connect.</li>
                    </ul>`;
                if (showDetailedInfo) {
                    infoPanelContent.innerHTML = detailedInfo.notifications;
                    showInfoPanel();
                }
                panel2Content.querySelectorAll('a').forEach(a => a.classList.remove('active'));
            }

            function loadMessages(showDetailedInfo = false) {
                currentMainCategory = null;
                currentSubCategory = "Messages";
                headingTitle.textContent = "Messages"; 
                contentSection.innerHTML = `
                    <h2>Messages</h2>
                    <div class="filter-container">
                        <div class="filter-group">
                            <label for="msg-source">Source:</label>
                            <select id="msg-source"><option>All</option><option>Marketplace</option><option>Management</option><option>Community</option></select>
                            <label for="msg-status">Status:</label>
                            <select id="msg-status"><option>All</option><option>Unread</option><option>Favourites</option></select>
                            <input type="search" placeholder="Search messages..."><button>Search</button>
                        </div>
                    </div>
                    <ul class="item-list">
                        <li>From: Farmer Giles (Re: Your query about wool quality) - <em>unread</em></li>
                        <li>From: AgriSupplies Ltd. (Invoice #INV-0078 due)</li>
                        <li>From: Community Admin (Upcoming webinar on soil health) - <em>favourite</em></li>
                    </ul>`;
                if (showDetailedInfo) {
                    infoPanelContent.innerHTML = detailedInfo.messages;
                    showInfoPanel();
                }
                panel2Content.querySelectorAll('a').forEach(a => a.classList.remove('active'));
            }

            togglePanel2Btn.addEventListener('click', () => {
                panel2.classList.toggle('hidden');
                if (panel2.classList.contains('hidden')) {
                    togglePanel2Icon.classList.remove('fa-chevron-left');
                    togglePanel2Icon.classList.add('fa-chevron-right'); 
                    panel2.style.borderRight = 'none';
                    contentSection.style.borderLeft = '1px solid var(--border-color)'; 
                } else {
                    togglePanel2Icon.classList.remove('fa-chevron-right');
                    togglePanel2Icon.classList.add('fa-chevron-left'); 
                    panel2.style.borderRight = '1px solid var(--border-color)';
                    contentSection.style.borderLeft = 'none'; 
                }
            });

            toggleInfoPanelBtn.addEventListener('click', () => {
                infoPanel.classList.toggle('hidden');
                 if (infoPanel.classList.contains('hidden')) {
                    toggleInfoPanelIcon.classList.remove('fa-chevron-right');
                    toggleInfoPanelIcon.classList.add('fa-chevron-left'); 
                    infoPanel.style.borderLeft = 'none';
                } else {
                    toggleInfoPanelIcon.classList.remove('fa-chevron-left');
                    toggleInfoPanelIcon.classList.add('fa-chevron-right'); 
                    infoPanel.style.borderLeft = '1px solid var(--border-color)';
                }
            });

            // Initial state
            contentSection.innerHTML = '<div class="content-placeholder">Welcome to the Food & Fibre Hub! Please select a category from the left panel to get started.</div>';
            headingTitle.textContent = 'Food & Fibre Hub'; 
            
            togglePanel2Icon.classList.remove('fa-chevron-left');
            togglePanel2Icon.classList.add('fa-chevron-right');
            toggleInfoPanelIcon.classList.remove('fa-chevron-right');
            toggleInfoPanelIcon.classList.add('fa-chevron-left');
            
            if (panel2.classList.contains('hidden')) {
                panel2.style.borderRight = 'none';
                contentSection.style.borderLeft = '1px solid var(--border-color)';
            } else {
                panel2.style.borderRight = '1px solid var(--border-color)';
                contentSection.style.borderLeft = 'none';
            }
            if (infoPanel.classList.contains('hidden')) {
                infoPanel.style.borderLeft = 'none';
            } else {
                 infoPanel.style.borderLeft = '1px solid var(--border-color)';
            }
        });
    </script>
</body>
</html>
